# ==============================================
# Prompt Compression Gateway - Environment Config
# ==============================================

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Policy Settings
MAX_TOKENS_DEFAULT=2048
MAX_TOKENS_HARD_LIMIT=8192
COMPRESSION_RATIO_MIN=0.2
COMPRESSION_RATIO_MAX=0.9

# Compression Model Configuration
COMPRESSOR_MODEL=microsoft/llmlingua-2-bert-base-multilingual-cased-meetingbank
COMPRESSOR_DEVICE=cpu
# Change to 'cuda' if GPU available

# Logging Configuration
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# API Rate Limiting (optional)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Monitoring (optional)
ENABLE_METRICS=true
METRICS_PORT=9090

# CORS Settings
CORS_ORIGINS=*
# For production, specify allowed origins: https://yourdomain.com,https://api.yourdomain.com
